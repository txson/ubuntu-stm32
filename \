# 指定当前项目的名称和项目多支持的语言
PROJECT(stm32)
CMAKE_MINIMUM_REQUIRED(VERSION 2.6)

#将当前目录中的源文件名称赋值给变量 DIR_SRCS
AUX_SOURCE_DIRECTORY(. DIR_SRCS)

#指示变量 DIR_SRCS 中的源文件需要编译 成一个名称为 main 的可执行文件
ADD_EXECUTABLE(stm32_out ${DIR_SRCS})

SET(CMAKE_BUILD_TYPE "Debug")
SET(CMAKE_C_FLAGS_DEBUG "$ENV{CFLAGS} -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -O0 -Wall -g -ggdb")
SET(CMAKE_C_FLAGS_RELEASE "$ENV{CFLAGS} -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -O3 -Wall")
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -D_GNU_SOURCE=1 -D_REENTRANT")

#设置编译器
SET(CMAKE_C_COMPILER "arm-none-eabi-gcc")

#添加子目录
ADD_SUBDIRECTORY(src cmsis hal_lib)

#添加库文件目录相当于 -L
LINK_DIRECTORIES("cmsis hal")

#添加头文件的目录相当于 -I
INCLUDE_DIRECTORIES(./ ./include ./cmsis ./hal_lib ./user )


